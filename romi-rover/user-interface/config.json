{
    "user-interface": {

        "display-classname": "crystal-display",
        "navigation-classname": "remote-navigation",
        "input-device-classname": "joystick",
        "sound-notifications": "fluid-sounds",
        
        "speed-controller": {
            "fast": {
                "use-speed-curve": true,
                "speed-curve-exponent": 2.0,
                "use-direction-curve": true,
                "direction-curve-exponent": 2.0,
                "speed-multiplier": 1.0,
                "direction-multiplier": 0.4
            },
            "accurate": {
                "use-speed-curve": true,
                "speed-curve-exponent": 1.0,
                "use-direction-curve": true,
                "direction-curve-exponent": 1.0,
                "speed-multiplier": 0.3,
                "direction-multiplier": 0.15
            }
        },

        "remote-navigation": {
            "server-name": "navigation"
        },

        "fluid-sounds": {
            "sound-font": "notifications.sf2",
            "sounds": {
                "notify-startup": 4,
                "notify-confirm-menu-mode": 22,
                "notify-leave-menu-mode": 21,
                "notify-change-menu": 1,
                "notify-menu-confirmed": 22,
                "notify-menu-finished": 10,
                "notify-confirm-navigation-mode": 16,
                "notify-leave-navigation-mode": 21,
                "notify-moving": 7
            }
        }
    },
    "ports": {
        "joystick": {
            "port": "/dev/input/js0", 
            "type": "input-device"
        }, 
        "crystal-display": {
            "port": "/dev/ttyACM0", 
            "type": "serial"
        }
    }
}
