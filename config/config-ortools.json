{
    "oquam": {
        "cnc-range": [[0, 0.950000], [0, 0.900000], [-0.180000, 0]],
        "controller-classname": "stepper-controller",
        "path-maximum-deviation": 0.010000,
        "path-slice-duration": 0.020000,
        "stepper-settings": {
            "displacement-per-revolution": [0.040000, 0.040000, -0.002000],
            "gears-ratio": [1, 1, 1],
            "maximum-acceleration": [0.300000, 0.300000, 0.030000],
            "maximum-rpm": [300, 300, 300],
            "microsteps": [8, 8, 1],
            "steps-per-revolution": [200, 200, 200]
        }
    },
    
    "navigation": {

        "rover": {
            "wheel_diameter": 0.47,
            "wheel_base": 1.0,
            "encoder_steps": 1536,
            "maximum_speed": 1.5
        },
        
        "motor-driver": "brush-motor-driver",

        "brush-motor-driver": {
            "maximum_signal_amplitude": 40,
            "use_pid": true,
            "pid": {
                "kp": 0.280,
                "ki": 0.000,
                "kd": 0.010
            },
            "encoder_directions": {
                "left": -1,
                "right": 1
            }
        }
    },
    
    "weeder": {
        "z0": -0.110,
        "speed": 0.8,
        
        "camera-classname": "remote-camera",
        "cnc-classname": "remote-cnc",
        
        "cropper": "imagecropper",
        "segmentation": "svm",
        "path": "ortools",

        "usb-camera": {
            "width": 1920,
            "height": 1080
        },
        
        "imagecropper": {
            "workspace": [335, 79, 934, 888]
        },
        "svm": {
            "a": [-0.04152306,  0.0472676 , -0.00709334],
            "b": 0.66209273
        }, 
        "quincunx": {
            "threshold": 0.5,
            "distance_plants": 0.30,
            "distance_rows": 0.25,
            "radius_zones": 0.10
        },
        "som": {
            "alpha": 0.2,
            "beta": 1.2,
            "epsilon": 0.01,
            "print": false
        },
        "ortools": {
            "print": false
        } 
    },
    
    "user-interface": {

        "display-classname": "crystal-display",
        "navigation-classname": "remote-navigation",
        "input-device-classname": "joystick",
        "notifications": "fluid-sounds",
        "weeder-classname": "fake-weeder",
        
        "speed-controller": {
            "fast": {
                "use-speed-curve": true,
                "speed-curve-exponent": 1.5,
                "use-direction-curve": true,
                "direction-curve-exponent": 1.5,
                "speed-multiplier": 1.0,
                "direction-multiplier": 0.4
            },
            "accurate": {
                "use-speed-curve": true,
                "speed-curve-exponent": 1.0,
                "use-direction-curve": true,
                "direction-curve-exponent": 1.0,
                "speed-multiplier": 0.5,
                "direction-multiplier": 0.4
            }
        },

        "remote-navigation": {
            "server-name": "navigation"
        },

        "fluid-sounds": {
            "soundfont": "notifications.sf2",
            "sounds": {
                "startup": {
                    "preset": 4,
                    "volume": 90
                },
                "confirm-menu-mode": {
                    "preset": 22,
                    "volume": 90
                },
                "leave-menu-mode": {
                    "preset": 21,
                    "volume": 90
                },
                "change-menu": {
                    "preset": 1,
                    "volume": 90
                },
                "menu-confirmed": {
                    "preset": 22,
                    "volume": 90
                },
                "script-finished": {
                    "preset": 10,
                    "volume": 90
                },
                "confirm-navigation-mode": {
                    "preset": 16,
                    "volume": 90
                },
                "leave-navigation-mode": {
                    "preset": 21,
                    "volume": 90
                },
                "moving": {
                    "preset": 7,
                    "volume": 90
                }
            }
        },
        
        "script-engine": {
            "script": "scripts.json"
        }
    },
    
    "ports": {
        "joystick": {
            "port": "/dev/input/js0", 
            "type": "input-device"
        }, 
        "display-device": {
            "port": "/dev/ttyACM1", 
            "type": "serial"
        },
        "oquam": {
            "port": "/dev/ttyACM0",
            "type": "serial"
        },
        "brush-motor-driver": {
            "port": "/dev/ttyACM0",
            "type": "serial"
        },
        "usb-camera": {
            "port": "/dev/video0",
            "type": "video"
        }
    }
}
